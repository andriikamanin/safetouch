<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- При нажатии -->
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#FF5A78"
                android:endColor="#FF5A78"
                android:angle="90" />
            <corners android:radius="50dp" />
            <solid android:color="#FF5A78" />
            <stroke android:color="#96323C" android:width="2dp" />
        </shape>
    </item>

    <!-- Обычное состояние -->
    <item>
        <shape>
            <gradient
                android:startColor="#FF5A78"
                android:endColor="#FF5A78"
                android:angle="90" />
            <corners android:radius="50dp" />
            <stroke android:color="#96323C" android:width="2dp" />
            <solid android:color="#FF5A78" />
        </shape>
    </item>
</selector>

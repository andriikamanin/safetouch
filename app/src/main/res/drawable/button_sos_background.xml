<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Состояние кнопки при нажатии -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#D80027" />
            <corners android:radius="50dp" />
            <padding android:left="20dp" android:top="20dp" android:right="20dp" android:bottom="20dp" />
        </shape>
    </item>

    <!-- Обычное состояние кнопки -->
    <item>
        <shape>
            <gradient
                android:startColor="#AFAFAF"
                android:endColor="#D80027"
                android:angle="90" />
            <corners android:radius="50dp" />
            <padding android:left="20dp" android:top="20dp" android:right="20dp" android:bottom="20dp" />
            <stroke android:width="3dp" android:color="#B0001C" />
        </shape>
    </item>
</selector>
